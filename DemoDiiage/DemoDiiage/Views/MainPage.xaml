<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoDiiage.Views.MainPage"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand" Margin="10">
        <Label Text="{Binding Title}" HorizontalOptions="Center" FontSize="Title" VerticalOptions="StartAndExpand"></Label>
        <Button  Text="Find a movie" Command="{Binding FindCommand}" VerticalOptions="Center" Margin="10" />
        <Button Text="My movie list" Command="{Binding ListCommand}" VerticalOptions="Center" Margin="10" />
    </StackLayout>

</ContentPage>